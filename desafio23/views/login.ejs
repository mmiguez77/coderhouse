<%- include ('./layouts/header') -%>
<%- include ('./layouts/navbar') -%>

<div class="container mt-5">
    <h3 style="text-align:center" class="my-4">LOG IN</h3>
    <form method="POST" action="/user/login" autocomplete="off">
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="username" placeholder="Usuario"
                aria-label="Recipient's username" aria-describedby="button-addon2" name="username" required>
            <input type="text" class="form-control" id="password" placeholder="Contraseña"
                aria-label="Recipient's username" aria-describedby="button-addon2" name="password" required>

            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Iniciar Sesión</button>
            </div>
        </div>
    </form>
</div>
<div class="container">
    <div class="input-group-append">
        <a href="/user/register">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Registrarse</button>
        </a>
    </div>

</div>

    <%- include ('./layouts/footer') -%>