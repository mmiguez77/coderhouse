<%- include ('./layouts/header') -%>
    <%- include ('./layouts/navbar') -%>

        <div class="container mt-5">
            <% if (error !='' ) { %>

                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error:</strong>
                    <%= error %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                </div>
                <% } %>
                    <h3 style="text-align:center" class="my-4">LOG IN</h3>
                    <form method="POST" action="/user/login" autocomplete="off">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="username" placeholder="Usuario"
                                aria-label="Recipient's username" aria-describedby="button-addon2" name="username"
                                required>
                            <input type="password" class="form-control" id="password" placeholder="Contraseña"
                                aria-label="Recipient's username" aria-describedby="button-addon2" name="password"
                                required>

                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Iniciar
                                    Sesión</button>
                            </div>
                        </div>
                    </form>
                    <a href="/user/auth/facebook">
                        <button class="btn btn-info">Login con Facebook</button>
                    </a>

                   

                        <div class="fb-login-button" data-width="500" data-size="large" data-button-type="login_with" data-layout="default" data-auto-logout-link="true" data-use-continue-as="false"></div>

                    <script>
                        <fb:login-button
                            scope="public_profile,email"
                            onlogin="checkLoginState();">
                        </fb:login-button>
                    </script>
        </div>

        <div class="container mt-4">
            <div class="input-group-append">
                <a href="/user/register">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Registrarse</button>
                </a>
            </div>

        </div>

        <%- include ('./layouts/footer') -%>