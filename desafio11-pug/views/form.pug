doctype html
head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    // CSS BOOTSTRAP
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
    title Desafio 11 - PUG
    body
        h2(style="text-align:center; margin-top:1rem") FORMULARIO DE INGRESO PRODUCTO
        div(.container.bg-secondary.text-white.p-2)
        form(action="/api/productos" method="post" autocomplete="off" style="margin:2rem")
        
            label.form-label(for="title") PRODUCTO
            input#title.form-control(type="text" name="title")
        
            label.form-label(for="price") PRECIO
            input#price.form-control(type="number" name="price")
       
            label.form-label(for="thumbnail") IMAGEN
            input#thumbnail.form-control(type="text" name="thumbnail")
            button.btn.btn-primary(type="submit" style="margin-top:2rem") ENVIAR
block main